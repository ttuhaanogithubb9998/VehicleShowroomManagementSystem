@model VehicleShowroomManagementSystem.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1 style="margin-top:200px"></h1>

<section class="details">
    <div class="container">
        <div class="row">
            <div class="col col-xl-6 col-sm-12">
                <div id="carouselProduct" class="carousel slide carousel-fade" data-ride="carousel" data-interval="false">
                    <div class="carousel-inner">
                        @{
                            foreach (var item in Model.ProductImages)
                            {
                                <div class="carousel-item active">
                                    <img src="~/image/avatar/product/@item.Path" class="d-block w-100" alt="@item.Id">
                                </div>
                            }
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselProduct" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="false"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselProduct" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="false"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>

            <div class="col col-xl-6 col-sm-12">
                <div>
                    <h4 class="text-center">@Model.Name</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.VehicleType)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.VehicleType.Name)
                        </dd>
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.Manufacturer)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Manufacturer.Name)
                        </dd>
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.SerialNumber)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.SerialNumber)
                        </dd>
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.Price)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Price)
                        </dd>
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                    </dl>
                </div>
                <div class="text-right">
                    @{
                        if (@Model.Warehouses.Sum(w => w.Stock) > 0)
                        {
                            <a asp-controller="Customers" asp-action="Pay" asp-route-id="@Model.Id" class="btn btn-success" style="margin-right: 30px; color: #ee4d2d; background: #fbc6b42e; border: #ee4d2d solid 1px"> Buy</a>
                            <button class="btn btn-info float-right"><i style="color:white" class="fa fa-cart-plus"></i></button>
                        }
                        else
                        {
                            <p class="alert-danger text-center">Out of stock!</p>
                        }
                    }

                </div>

            </div>
        </div>
    </div>
</section>

