
@model IEnumerable<VehicleShowroomManagementSystem.Models.Product>
@{
    ViewData["Title"] = "Home";

    IEnumerable<VehicleShowroomManagementSystem.Models.Employee> employees = ViewBag.employees;
    IEnumerable<VehicleShowroomManagementSystem.Models.VehicleType> vehicleTypes = ViewBag.vehicleTypes;
    IEnumerable<VehicleShowroomManagementSystem.Models.Manufacturer> manufacturers = ViewBag.manufacturers;

}

<!-- slider-area -->
